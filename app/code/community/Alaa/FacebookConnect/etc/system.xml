<?xml version="1.0"?>
<config>
    <tabs>
        <alaa_facebookconnect>
            <label>Facebook Connect</label>
            <sort_order>200</sort_order>
        </alaa_facebookconnect>
    </tabs>
    <sections>
        <alaa_facebookconnect>
            <label>Facebook Settings</label>
            <tab>alaa_facebookconnect</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config>
                    <label>General Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <user_properties translate="label">
                            <label>User Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>alaa_facebookconnect/system_config_source_UserProfile</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                        </user_properties>
                        <permissions translate="label">
                            <label>Permissions</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>alaa_facebookconnect/system_config_source_permissions</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                        </permissions>
                        <deprecated_permissions translate="label">
                            <label>Deprecated Permissions</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>alaa_facebookconnect/system_config_source_permissions_deprecated</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                        </deprecated_permissions>
                    </fields>
                </config>
            </groups>
            <groups>
                <credentials>
                    <label>Credentials</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <api_id>
                            <label>Api Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_id>
                        <api_secret>
                            <label>Api Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_secret>
                        <default_graph_version>
                            <label>Default Graph Version</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_graph_version>
                    </fields>
                </credentials>
            </groups>
        </alaa_facebookconnect>
    </sections>
</config>        